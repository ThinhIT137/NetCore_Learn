@model IEnumerable<day07_DbAccess.models.KhachHang>

@{
    ViewData["Title"] = "Danh sách khách hàng";
}

<h2 class="mb-3">Danh sách khách hàng</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Thêm khách hàng mới</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Mã KH</th>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Điện thoại</th>
            <th>Địa chỉ</th>
            <th>Ngày đăng ký</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@(item.MaKhachHang ?? "(Chưa có)")</td>
                    <td>@(item.HoTenKhachHang ?? "(Không rõ)")</td>
                    <td>@(item.Email ?? "-")</td>
                    <td>@(item.DienThoai ?? "-")</td>
                    <td>@(item.DiaChi ?? "-")</td>
                    <td>@(item.NgayDangKy?.ToString("MM/dd/yyyy") ?? "-")</td>
                    <td>@(item.TrangThai == 1 ? "Hoạt động" : "Ngừng")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center text-muted">Không có khách hàng nào</td>
            </tr>
        }
    </tbody>
</table>
