            <canvas id="doughnutChart" height="200"></canvas>
        </div>
    </div>

    <!-- Biểu đồ 5 -->
    <div class="col-md-4 mb-3">
        <div class="card p-3 shadow-sm">
            <h5 class="card-title">So sánh doanh thu theo năm</h5>
            <canvas id="compareLineChart" height="200"></canvas>
        </div>
    </div>

    <!-- Biểu đồ 6 -->
    <div class="col-md-4 mb-3">
